// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Alcohols {
  id     Int     @id @default(autoincrement())
  title  String
  link   String?
  userId String?
}

model Birthdays {
  id     Int    @id @default(autoincrement())
  date   String
  userId String @unique
}

model Questions {
  id           Int  @id @default(autoincrement())
  questions    Json
  currentIndex Int
}

model Channels {
  id          Int    @id @default(autoincrement())
  channelId   String
  commandName String @unique
}

model Bets {
  id         Int    @id @default(autoincrement())
  betterId   String
  betterName String
  userId     String
  userName   String
  amount     String

  @@unique(fields: [betterId, userId], name: "betId")
}